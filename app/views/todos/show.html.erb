<div class="container">
  <% if notice.present? %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <%= render @todo %>

  <div class="mt-3">
    <%= link_to "Edit this Todo", edit_todo_path(@todo), class: "btn btn-primary me-2" %>
    <%= link_to "Back to Todos", todos_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy this Todo", @todo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ms-2" %>
  </div>
</div>
